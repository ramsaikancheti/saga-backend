<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>products</title>
    <script src="https://kit.fontawesome.com/b7e2b3e376.js" crossorigin="anonymous"></script>
    <link rel="icon" href="/favicon.ico" type="image/x-icon" />

    <link rel="stylesheet" href="/styles/products.css">  
</head>
<body>
    <div id="dashboardContainer"></div>
    
    <div id="mainContent"> </div>

    <div class="product-card" data-product-id="1" data-product-name="Product 1" data-brand-name="Brand 1" data-price="10.99" data-description="Description 1">
        <button onclick="handleEditButtonClick(1)">Edit</button>
    </div> 

    <div id="editProductModal" class="modals">
        <div class="modal-contents">
            <h2>Edit Product</h2>
            <form id="editProductForm" autocomplete="off">
                <label for="editProductName">Name:</label>
                <input type="text" id="editProductName" name="editName" required>
    
                <label for="editProductBrand">Brand:</label>
                <input type="text" id="editProductBrand" name="editBrandName" required>
    
                <label for="editProductPrice">Price:</label>
                <input type="number" id="editProductPrice" name="editPrice" required>
    
                 <label for="editProductImageUpload">Upload Image:</label>
                <input type="file" id="editProductImageUpload" accept="image/*" onchange="handleImageUpload(event)">
                <img id="editProductImagePreview" alt="Preview" style="max-width: 100%; max-height: 200px; margin-top: 10px; display: none;">
    
                <button type="button" id="confirmEditProduct">Save Changes</button>
                <button type="button" id="cancelEditProduct">Cancel</button>
            </form>
        </div>
    </div>
    
    

    <script>
        fetch('/shoppix-dashboard')
            .then(response => response.text())
            .then(data => {
                document.getElementById('dashboardContainer').innerHTML = data;
            })
            .catch(error => console.error('Error fetching dashboard:', error));
    </script>

    <script src="/public/index.js"></script>
    <script src="/public/products.js"></script>
</body>
</html>