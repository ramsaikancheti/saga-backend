<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Shoppix Dashboard</title>
     <script src="https://kit.fontawesome.com/b7e2b3e376.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-V4sojszDDckk5SDqHjhx9ZS1wsP2FWQxjiqj4r+TFS3DPL5GYeLoA5gri0R+xcIVF3+/6fSSzQwI9j7JsHy/lQ==" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link rel="stylesheet" href="/style/index.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" integrity="sha384-mQ93GR66B00ZXjt0YO5KlohRA5SY2XofGJxIO9iW7aR2Y" crossorigin="anonymous">
  
   <link rel="stylesheet" href="/styles/dashboard.css">
 </head>
<body>

    <div id="dashboardContainer"></div>

    <div id="orderModalBackground" class="modal-background">
        <div id="orderModal" class="modal">
          <div class="modal-content">
            <span class="close" onclick="closeOrderModal()">&times;</span>
            <div id="orderDetails"></div>
          </div>
        </div>
    </div>

    <div id="mainContent">
        <div class="orders_data">
        </div>
    </div>
    
    <div id="myChartContainer">
        <h3 class="myChartContainerheading">Weekly Orders</h3>
        <canvas id="myChart"> </canvas>
    </div> 
    <div id="pieChartContainer">
        <canvas id="pieChart"></canvas>
    </div>
    <div id="ordersTableContainer"> </div>

    <script>
        fetch('/shoppix-dashboard')
            .then(response => response.text())
            .then(data => {
                document.getElementById('dashboardContainer').innerHTML = data;
            })
            .catch(error => console.error('Error fetching dashboard:', error));
    </script>

    <script src="/public/index.js"></script>

  <script src="/public/dashboard.js"></script>
</body>
</html>