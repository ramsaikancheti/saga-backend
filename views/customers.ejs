<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <link rel="stylesheet" href="/styles/customers.css">
    <script src="https://kit.fontawesome.com/b7e2b3e376.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

</head>
<body>
    <div id="dashboardContainer"> </div>

    <div class="customer-title">
        <h4>Customers</h4>
    </div>

    <div class="customers-table">
        <div class="create-customer">
            <a href="/admin">Create Customer</a>
        </div>
        <div id="usersTableContainer"></div>
    </div>

    <div class="customer-title2">
        <h4>Admins</h4>
    </div>
    
    <div class="admin-table-container">
        <div class="admin-table">
            <div id="admintablecontainer"> </div>
        </div>
    </div>


    <div id="deleteUserModal" class="modal">
        <div class="modal-content">
            <p>Sure you want to delete this user ?</p>
            <button id="confirmDelete">Yes</button>
            <button id="cancelDelete">No</button>
        </div>
    </div>

    <div id="deleteAdminModal" class="modal">
        <div class="modal-content">
            <p>Sure you want to delete this user ?</p>
            <button id="confirmdelete">Yes</button>
            <button id="canceldelete">No</button>
        </div>
    </div>

    <div id="editUserModal" class="modal2">
        <h4>Edit User</h4>
        <div class="modal-content-user">
            <label for="editUserName"> </label>
            <input type="text" placeholder="User Name" id="editUserName">
            <label for="editUserEmail"> </label>
            <input type="email" placeholder="User Email" id="editUserEmail">
            <label for="editUserPassword"> </label>
            <input type="password" placeholder="New Password" id="editUserPassword">
            <div class="buttons">
                <button id="confirmEdit">Update</button>
                <button id="cancelEdit">Cancel</button>
            </div>
        </div>
    </div>


    <div id="editAdminModal" class="modal22">
        <h4>Edit Admin</h4>
        <div class="modal-content">
            <label for="editUserName"> </label>
            <input type="text" placeholder="admin Name" id="editAdminName">
            <label for="editUserEmail"> </label>
            <input type="email" placeholder="admin Email" id="editAdminEmail">
            <label for="editUserPassword"> </label>
            <input type="password" placeholder="New Password" id="editAdminPassword">
            <div class="buttons">
                <button id="confirmedit">Update</button>
                <button id="canceledit">Cancel</button>
            </div>
        </div>
    </div>


    <div id="successMessageModal" class="edit-msg-modal">
        <div class="modal-content-edit">
            <p>User data saved successfully!</p>
        </div>
    </div>    
 

    <script>
        fetch('/shoppix-dashboard')
            .then(response => response.text())
            .then(data => {
                document.getElementById('dashboardContainer').innerHTML = data;
            })
            .catch(error => console.error('Error fetching dashboard:', error));
    </script> 
    <script src="/public/index.js"></script>

    <script src="/public/customer.js"></script>
</body>
</html>